<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Links</title>
  </head>
  <body>
    <% if flash[:invalid_update] %>
    <div id='flash'>
      <div class='flash invalid_update'>
        <h1><%= flash[:invalid_update] %></h1>
      </div>
    </div>
    <% end %>

    <ul>
      <% @links.map do |link| %>
        <h1>
          <li><a href="<%= link.url %>" target="_blank"><%= link.title %></a></li>
          <form action="/delete" method="DELETE">
            <input type="hidden" name="id" value="<%= link.id %>">
            <input id="delete-<%= link.id %>" type="submit" value="delete">
          </form>
          <form action="/update" method="PUT">
            <input type="hidden" name="id" value="<%= link.id %>">
            <input id="update-<%= link.id %>" type="submit" value="update">
          </form>
        </h1>
      <% end %>
    </ul>
    <!-- <br> -->
    <form action="/new" method="GET">
        <input type="submit" value="Add link">
    </form>

  </body>
</html>
